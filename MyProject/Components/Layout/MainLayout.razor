<!-- Main Content -->
<div id="main-content" class="main-content p-3">
    <h2>Featured Items</h2>
</div>

<!-- Toggle Button for Sidebar -->
<button id="toggle-sidebar" onclick="toggleSidebar()" class="toggle-sidebar-btn">&#9776;</button>

<!-- CSS Styling -->
<style>
    /* Color Theme */
    :root {
        --primary-color: #dd5151;
        --text-light: #ffffff;
    }

    /* Toggle Button */
    .toggle-sidebar-btn {
        font-size: 24px;
        position: fixed;
        z-index: 1051;
        background: var(--primary-color);
        border: none;
        cursor: pointer;
        color: var(--text-light);
        padding: 10px;
        border-radius: 5px;
        transition: left 0.3s ease, transform 0.3s ease;
    }

        .toggle-sidebar-btn.closed {
            left: 20px; /* Position on left when sidebar is closed */
            top: 50%; /* Center vertically */
            transform: translateY(-50%);
        }

        .toggle-sidebar-btn.open {
            right: -20px; /* Offset button to the right of sidebar */
            top: 50%;
            transform: translateY(-50%);
        }

    /* Navbar Text */
    .navbar .navbar-brand,
    .navbar .nav-link,
    .navbar .navbar-text {
        color: var(--text-light) !important;
    }

    /* Sidebar Styling */
    .sidebar {
        width: 200px;
        height: 100vh;
        position: fixed;
        top: 56px; /* Adjust to navbar height */
        left: -200px; /* Initially hidden offscreen */
        background-color: var(--primary-color);
        border-right: 1px solid #e0e0e0;
        transition: left 0.3s ease;
        z-index: 1050;
        color: var(--text-light);
    }

        .sidebar.active {
            left: 0; /* Slide into view */
        }

    /* Sidebar Links */
    .sidebar-link {
        color: var(--text-light);
        padding: 15px 20px;
        font-size: 16px;
        display: block;
        text-decoration: none;
    }

        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.2); /* Slight hover effect */
            color: var(--text-light);
        }

    /* Background Dimmer */
    .background-dimmer {
        display: none;
        position: fixed;
        top: 56px; /* Starts below navbar */
        left: 0;
        width: 100%;
        height: calc(100% - 56px); /* Excludes navbar */
        background: rgba(0, 0, 0, 0.5);
        z-index: 1049;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .background-dimmer.active {
            display: block;
            opacity: 1;
        }

    /* Main Content */
    .main-content.dimmed {
        pointer-events: none; /* Prevent interaction when dimmed */
    }
</style>

<!-- JavaScript for Sidebar Toggle -->
<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const dimmer = document.getElementById('background-dimmer');
        const mainContent = document.getElementById('main-content');
        const toggleButton = document.getElementById('toggle-sidebar');

        sidebar.classList.toggle('active');
        dimmer.classList.toggle('active');
        mainContent.classList.toggle('dimmed');

        // Move the toggle button to the appropriate side
        if (sidebar.classList.contains('active')) {
            toggleButton.classList.remove('closed');
            toggleButton.classList.add('open');
        } else {
            toggleButton.classList.remove('open');
            toggleButton.classList.add('closed');
        }
    }

    // Set initial position of toggle button
    document.getElementById('toggle-sidebar').classList.add('closed');
</script>

